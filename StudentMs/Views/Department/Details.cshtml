@model Department


<h2>Department Details</h2>

<div class="card shadow-sm p-3 mb-4">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Budget</dt>
        <dd class="col-sm-9">@Model.Budget.ToString("C")</dd>

        <dt class="col-sm-3">Office Location</dt>
        <dd class="col-sm-9">@Model.OfficeLocation</dd>

        <dt class="col-sm-3">Phone Extension</dt>
        <dd class="col-sm-9">@Model.PhoneExtension</dd>

        <dt class="col-sm-3">Head of Department</dt>
        <dd class="col-sm-9">@Model.HeadOfDepartment</dd>

        <dt class="col-sm-3">Established Year</dt>
        <dd class="col-sm-9">@Model.EstablishedYear</dd>

        <dt class="col-sm-3">Number of Professors</dt>
        <dd class="col-sm-9">@Model.NumberOfProfessors</dd>

        <dt class="col-sm-3">Website</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.WebsiteUrl))
            {
                <a href="@Model.WebsiteUrl" target="_blank">@Model.WebsiteUrl</a>
            }
        </dd>

        <dt class="col-sm-3">Is Active</dt>
        <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>