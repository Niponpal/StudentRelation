@model List<Department>

<h2>Departments</h2>

<p>
    <a class="btn btn-primary" asp-action="CreateOrEdit">Create New Department</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Budget</th>
            <th>Office Location</th>
            <th>Phone Extension</th>
            <th>Head Of Department</th>
            <th>Established Year</th>
            <th>No. of Professors</th>
            <th>Website</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.Id </td>
                <td>@dept.Name</td>
                <td>@dept.Budget.ToString("C")</td>
                <td>@dept.OfficeLocation</td>
                <td>@dept.PhoneExtension</td>
                <td>@dept.HeadOfDepartment</td>
                <td>@dept.EstablishedYear</td>
                <td>@dept.NumberOfProfessors</td>
                <td>
                    @if (!string.IsNullOrEmpty(dept.WebsiteUrl))
                    {
                        <a href="@dept.WebsiteUrl" target="_blank">Visit</a>
                    }
                </td>
                <td>@(dept.IsActive ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="CreateOrEdit" asp-route-id="@dept.Id">Edit</a>
                    <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@dept.Id">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@dept.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>