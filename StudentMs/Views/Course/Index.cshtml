@model List<Course>

<h2>Course List</h2>
<p>
    <a class="btn btn-primary" asp-action="CreateOrEdit">Create New Course</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Credits</th>
            <th>Course Code</th>
            <th>Semester</th>
            <th>Max Students</th>
            <th>Start Date</th>
            <th>Is Elective</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Credits</td>
                <td>@item.CourseCode</td>
                <td>@item.Semester</td>
                <td>@item.MaxStudents</td>
                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@(item.IsElective ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="CreateOrEdit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

  </table>
